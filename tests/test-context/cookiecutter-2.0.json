{
  "version": "2.0",
  "template": {
    "name": "cookiecutter-pytest-plugin",
    "version": "1.0.0",
    "authors": [
      "Raphael Pierzina <raphael@hackebrot.de>",
      "Audrey Roy Greenfeld <aroy@alum.mit.edu>"
    ],
    "license": "MIT",
    "keywords": [
      "pytest",
      "python",
      "plugin"
    ],
    "url": "https://github.com/pytest-dev/cookiecutter-pytest-plugin",
    "variables": [
      {
        "name": "full_name",
        "default": "Raphael Pierzina",
        "prompt": "What's your full name?",
        "type": "string"
      },
      {
        "name": "email",
        "default": "raphael@hackebrot.de",
        "prompt": "What's your email?",
        "type": "string"
      },
      {
        "name": "plugin_name",
        "default": "emoji",
        "prompt": "What should be the name for your plugin?",
        "type": "string"
      },
      {
        "name": "module_name",
        "default": "{{cookiecutter.plugin_name|lower|replace('-','_')}}",
        "prompt": "Please enter a name for your base python module",
        "type": "string"
      },
      {
        "name": "license",
        "default": "MIT",
        "prompt": "Please choose a license!",
        "type": "string",
        "choices": [
          "MIT",
          "BSD-3",
          "GNU GPL v3.0",
          "Apache Software License 2.0",
          "Mozilla Public License 2.0"
        ]
      },
      {
        "name": "docs",
        "default": true,
        "prompt": "Do you want to generate a base for docs?",
        "type": "yes_no"
      },
      {
        "name": "docs_tool",
        "default": "mkdocs",
        "prompt": "Which tool do you want to choose for generating docs?",
        "type": "string",
        "choices": [
          "mkdocs",
          "sphinx"
        ]
      },
      {
        "name": "year",
        "default": "{% now 'utc', '%Y' %}",
        "prompt_user": false,
        "type": "string"
      },
      {
        "name": "fixtures",
        "default": {
          "foo": {
            "scope": "session",
            "autouse": true
          },
          "bar": {
            "scope": "function",
            "autouse": false
          }
        },
        "prompt_user": true,
        "type": "json"
      }
    ]
  }
}
